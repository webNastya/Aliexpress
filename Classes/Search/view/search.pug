#cards-wrapper

    each card in cards
        .card-wrapper(data-id=card.id)
            .card-img-wrapper
                img.card-img-top(data-id=card.id src="src/img/carts/" + card.id + "/0.png" alt='')
                button.add-favorite(class=card.inFavorites ? "active" : "" data-id=card.id)
            .card-title(data-id=card.id) !{card.title}
            .card-body
                .card-price !{card.price.toString().replace(/(\d)(?=(\d{3})+(\D|$))/g, '$1 ')} ₽
                - let attributes = card.inBasket ? {disabled: "true"} : {};
                button.add-cat-card(data-id=card.id data-title="Добавить в корзину")&attributes(attributes)


header
    .container.header-main
        .container-mini
            .logo

            .category
                .category-title Категории
                    .cat-container
                        .submenu
                            .category-item(data-category='mobile') Смартфоны
                                .sub
                                    div меню телефонов и аксессуаров
                            .category-item(data-category='pc') Планшеты
                                .sub
                                    div меню компьютеров и оргтехники
                            .category-item(data-category='electron') Фитнес браслеты
                                .sub
                                    div меню электроники
                            .category-item(data-category='home') Умные часы
                                .sub
                                    div меню бытовой техники
                            .category-item(data-category='sport') Наушники
                                .sub
                                    div меню спорта и развлечений
                            .category-item(data-category='sport') Портативные колонки
                                .sub
                                    div меню спорта
                            .category-item(data-category='sport') Комплектующие для ПК
                                .sub
                                    div меню развлечений

            form#search
                .search-wrapper
                    input#searchGoods.search-wrapper_input(type='search' role='search' placeholder='Поиск')
                .search-wrap-btn
                    button#search-btn.search-btn(type='submit' aria-label='Поиск товаров')
        .container-mini
            #basket-main-btn.nav-elements()
                span.counter !{basketCnt}
            #favorites-btn.nav-elements()
                span.counter !{favoritesCnt}

            form#search
                .search-wrapper
                    input#searchGoods.search-wrapper_input(type='search' role='search' placeholder='Поиск')
                .search-wrap-btn
                    button#search-btn.search-btn(type='submit' aria-label='Поиск товаров')
        .container-mini
            #basket-main-btn.nav-elements()
                span.counter !{basketCnt}
            #favorites-btn.nav-elements()
                span.counter !{favoritesCnt}
